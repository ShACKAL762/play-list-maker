<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorPrimaryVariant"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="4dp"
        android:orientation="horizontal">

            <ImageButton
                android:id="@+id/arrow_back"
                android:layout_width="@dimen/back_button"
                android:layout_height="@dimen/back_button"
                style="@style/BackArrowButton" />

        <TextView
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:text="@string/find"
            >
        </TextView>


    </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/search_line">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="14dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_search_line">

            </ImageView>

            <EditText
                android:id="@+id/search_line"
                style="@style/SearchLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="36dp"
                android:gravity="center_vertical"
                android:hint="@string/find"
                android:imeOptions="actionDone"
                android:singleLine="true"/> />
            <ImageView
                android:id="@+id/search_cleaner"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_gravity="end"
                android:visibility="gone"
                android:src="@drawable/ic_clean_button"/>
        </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:visibility="visible"
        tool:visibility="gone"/>

    <LinearLayout
        android:id="@+id/not_found_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="78dp"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/place_holder_not_found"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_found"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="16dp"
            style="@style/SearchErrorMessage"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lost_connection_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="78dp"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/place_holder_lost_connection"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lost_connection"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="16dp"
            style="@style/SearchErrorMessage"/>
        <TextView
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:text="@string/message_lost_connection"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="16dp"
            android:gravity="center"
            style="@style/SearchErrorMessage"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/refresh"
            android:layout_width="92dp"
            android:layout_height="36dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/refresh"
            android:textSize="@dimen/ys_text_14"
            android:letterSpacing="0"
            android:textAllCaps="false"
            android:maxLines="1"
            android:padding="1dp"
            android:textColor="?attr/colorPrimaryVariant"
            android:insetTop="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="54dp">
        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

</LinearLayout>


