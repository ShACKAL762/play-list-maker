<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ya_blue"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/title_template"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:text="@string/app_name"
            android:fontFamily="@font/ys_display_medium"
            android:letterSpacing="0"
            android:textColor="@color/ya_white"
            android:textSize="@dimen/ys_text_22">

        </TextView>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/indent_start_end"
        android:paddingEnd="@dimen/indent_start_end"
        android:orientation="vertical">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/find_button"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_weight="0.33"

            android:fontFamily="@font/ys_display_medium"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:letterSpacing="0"

            android:text="@string/find"
            android:textAllCaps="false"
            android:textColor="@color/ya_black"
            android:textSize="@dimen/ys_text_22"
            app:backgroundTint="@color/ya_white"
            app:cornerRadius="@dimen/button_radius"

            app:icon="@drawable/ic_find"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_padding"
            app:iconSize="@dimen/icon_size_24x24"
            app:iconTint="@color/ya_black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/library_button"

            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:layout_marginTop="@dimen/indent_between_buttons"
            app:cornerRadius="@dimen/button_radius"
            app:backgroundTint="@color/ya_white"

            android:fontFamily="@font/ys_display_medium"
            android:textAllCaps="false"
            android:text="@string/library"
            android:textColor="@color/ya_black"
            android:textSize="@dimen/ys_text_22"
            android:letterSpacing="0"

            app:icon="@drawable/ic_library"
            app:iconPadding="@dimen/icon_padding"
            app:iconSize="@dimen/icon_size_24x24"
            app:iconGravity="textStart"
            app:iconTint="@color/ya_black"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/indent_between_buttons"
            android:layout_marginBottom="24dp"

            android:layout_weight="0.33"
            android:fontFamily="@font/ys_display_medium"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"

            android:letterSpacing="0"
            android:text="@string/settings"
            android:textAllCaps="false"
            android:textColor="@color/ya_black"
            android:textSize="@dimen/ys_text_22"
            app:backgroundTint="@color/ya_white"

            app:cornerRadius="@dimen/button_radius"
            app:icon="@drawable/ic_settings"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_padding"
            app:iconSize="@dimen/icon_size_24x24"

            app:iconTint="@color/ya_black" />

    </LinearLayout>




</LinearLayout>

