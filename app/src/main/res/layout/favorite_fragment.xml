<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/placeHolder"
        android:layout_width="@dimen/image_120"
        android:layout_height="@dimen/image_120"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/library_placeholder_margin_top"
        android:src="@drawable/place_holder_not_found"/>
    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/library_empty_text_margin_top"
        android:text="@string/library_empty"
        android:textSize="@dimen/ys_text_19"
        android:fontFamily="@font/ys_display_medium"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:visibility="gone"/>
</FrameLayout>
