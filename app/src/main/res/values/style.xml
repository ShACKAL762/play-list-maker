<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BigButton" parent="Widget.Material3.Button.UnelevatedButton">

        <item name="backgroundTint">@color/yp_white</item>
        <item name="cornerRadius">@dimen/button_radius</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/ys_text_22</item>
        <item name="android:letterSpacing">0</item>

        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconSize">@dimen/icon_size_24x24</item>
        <item name="iconTint">@color/yp_black</item>

    </style>

    <style name="Title">

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/ys_text_22</item>

    </style>

    <style name="BackArrowButton">

        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_arrow_back</item>

    </style>
    <style name="TextSettings">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/ys_text_16</item>

    </style>

    <style name="SearchLine">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:focusable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/ys_text_16</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="TrackText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/ys_text_11</item>
        <item name="android:textColor">?attr/colorTertiary</item>
    </style>
    <style name="SearchMessage">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/ys_text_19</item>
    </style>
    <style name="SearchMessageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/ys_text_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>

    </style>


    <style name="trackInfo">
        <item name="android:textSize">@dimen/ys_text_13</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="trackInfoName" parent="trackInfo">
        <item name="android:textColor">@color/yp_text_grey</item>
    </style>
    <style name="trackInfoValue" parent="trackInfo">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="tabText" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/ys_text_14</item>
    </style>

    <style name="bottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/bottom_menu_background</item>
        <item name="itemIconTint">@color/bottom_navigation_selector</item>
        <item name="itemTextColor">@color/bottom_navigation_selector</item>
        <item name="itemTextAppearanceActive">@style/bottomNavText</item>
        <item name="itemTextAppearanceInactive">@style/bottomNavText</item>
    </style>

    <style name="bottomNavText" parent="bottomNav">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/ys_text_12</item>
    </style>



    <style name="ShapeAppearance">
        <item name="cornerSize">8dp</item>
    </style>


    <style name="MatrialAlertText" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertBodyText</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveMaterialAlertButtonText</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertButtonText</item>
    </style>
    <style name="MaterialAlertDialogText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
        <item name="android:textColor">@color/yp_blue</item>
    </style>
    <style name="MaterialAlertBodyText" parent="MaterialAlertDialog.Material3.Body.Text.CenterStacked">
        <item name="android:textColor">@color/yp_blue</item>
        <item name="android:textSize">@dimen/ys_text_12</item>

    </style>
    <style name="MaterialAlertButtonText" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/yp_blue</item>
    </style>
    <style name="PositiveMaterialAlertButtonText" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/yp_blue</item>
    </style>


    <style name="DeleteAlertText" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="materialAlertDialogBodyTextStyle">@style/DeleteAlertBodyText</item>
        <item name="buttonBarPositiveButtonStyle">@style/DeletePositiveMaterialAlertButtonText</item>
        <item name="buttonBarNegativeButtonStyle">@style/DeleteAlertButtonText</item>
        <item name="background">@color/yp_white</item>
    </style>
    <style name="DeleteAlertBodyText" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/ys_text_18</item>

    </style>
    <style name="DeleteAlertButtonText" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/yp_black</item>
    </style>
    <style name="DeletePositiveMaterialAlertButtonText" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/yp_black</item>
    </style>
</resources>